#!/bin/sh
# Use asciidoc to generate an html file. The source file content will be embedded
# in the html file as a comment.

dst=${1%.*}.html

echo "<!-- Generated by asciidoc. The source is in the comment below. -->" > $dst
echo "<!-- ASCIIDOC_SOURCE_START" >> $dst
cat $1 >> $dst
echo "ASCIIDOC_SOURCE_END -->" >> $dst
asciidoc $args --out-file=- $1 >> $dst
